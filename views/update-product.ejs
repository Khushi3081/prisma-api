<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'></link>  
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>
  </head>
  <style>
    .container {
      width: 1440px;
      margin: auto;
    }
    .back-button {
      border-radius: 0.25rem;
      border: 1px solid;
      padding: 0.5rem 1rem;
      color: #fff;
      background-color: blueviolet;
      text-decoration: none;
    }
  </style>
  <body>
    <div class="container">
      <form action="/product/update/<%=data[0].id%>" method="post" enctype="multipart/form-data" id="productInfo">
        <div class="mb-3">
          <label for="formGroupExampleInput" class="form-label"
            >Edit Product</label
          >

          <div>
            <select class="form-select" aria-label="Default select example" name="c_id" id="category" onchange="addSubCategory()">
              <option selected>Select One Category</option>
              <% for(let i=0;i<category.length;i++) {%>
              <option value="<%=category[i].id%>" <% if(category[i].name == data[0].subCategory.candidate.name) {%> Selected <% } %> ><%=category[i].name%></option>
            <% } %>
          </select>
          </div><br>
          
          <div>
            <select class="form-select" aria-label="Default select example" name="sub_id" id="subcategory"> 

              <% category.forEach(d => { %>
                <% d.subCats.forEach(s => { %>
                    <option value="<%=s.id%>"<% if(s.name == data[0].subCategory.name) {%> Selected <% } %> ><%=s.name%></option>
                  <% });%>
                <% });%>
            </select>
            </div><br>
            <input
            type="text"
            id="p_id"
            name="id"
            value="<%= data[0].id %>"
            hidden
          />
          <div>
          <input
            type="text"
            class="form-control",
            name = "productname"
            id="formGroupExampleInput"
            value="<%= data[0].name%>"
            placeholder="Product Name"
          /><br>
          <input
            type="text"
            class="form-control",
            name = "productprice"
            id="productprice"
            value="<%= data[0].price %>"
            placeholder="Product Price"
            onkeyup="priceCheck()"
          /><br>
          <input
            type="text"
            class="form-control",
            name = "productquntity"
            id="formGroupExampleInput"
            value="<%= data[0].quantity %>"
            placeholder="Product Quantity"
          />
          <input
            type="file"
            class="form-control",
            name = "productimage"
            id="formGroupExampleInput"
            placeholder="Product Image"
          />
          
          </div>
        </div>
        <input type="button" class="btn btn-primary" value="Submit" onclick="validate()"/>
      </form></br>
      <div>
        <a class="back-button" href="/admin" >Back to HomePage</a>
      </div>
    </div>
  </body>

  <script>
    async function addSubCategory() {
      const category_id = document.getElementById("category").value;
      const qry_string = await fetch(`/product/sub/${category_id}`);
      const answer = await qry_string.json()
      updateSubCategory(answer)
    }
    async function updateSubCategory(answer){
      const sc_dropdown = await document.getElementById("subcategory");
      sc_dropdown.innerHTML = "";

      for(let i=0;i<answer.subcategory.length;i++) {
        const option = await document.createElement('option');
        option.value = answer.subcategory[i].id;
        option.text = answer.subcategory[i].name;
        sc_dropdown.appendChild(option);
      }
    }
  </script>
  <script>
     async function priceCheck() {
      let price = document.getElementById('productprice').value;
      let check = /^\d{6}/;
      let number = /\D/;
      if(price.match(number)){
        swal({
          text: 'Enter only numeric value!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(price.match(check)) {
        swal({
          text: 'Enter valid price!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
    }
    async function validate() {
      let id = document.getElementById('p_id').value;
      let c_id = document.getElementsByName('c_id')[0].value;
      let sub_id = document.getElementById('subcategory').value;
      let name = document.getElementsByName('productname')[0].value;
      let price= document.getElementsByName('productprice')[0].value;
      let quantity= document.getElementsByName('productquntity')[0].value;
      let image= document.getElementsByName('productimage')[0].value;
       if(c_id == "Select One Category") {
        swal({
          text: ' select Category!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(!name) {
        swal({
          text: ' add Product-name!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(!price) {
        swal({
          text: ' add Product-price!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(!quantity) {
        swal({
          text: ' add Product-quantity!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(!image) {
        swal({
          text: ' add Product-image!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(category && name && price && quantity && image){
        document.getElementById("productInfo").submit();
        return true;
      }
     
    }
  </script>
</html>
