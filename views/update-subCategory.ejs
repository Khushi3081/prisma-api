<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sub-category</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'></link>  
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>
  </head>
  <style>
    .container {
      width: 1440px;
      margin: auto;
    }
    .back-button {
      border-radius: 0.25rem;
      border: 1px solid;
      padding: 0.5rem 1rem;
      color: #fff;
      background-color: blueviolet;
      text-decoration: none;
    }
  </style>

  <body>
    <div class="container">
      <form action="">
        <div class="mb-3">
          <label for="formGroupExampleInput" class="form-label"
            >Add Sub-category</label
          >
          <div>
          <select class="form-select" aria-label="Default select example" name="c_id" id="category">
            <option selected>Select One Category</option>
            <% for(let i=0;i<data1.category.length;i++) {%>
              <option value="<%=data1.category[i].id%>" <% if(data1.category[i].name == data[0].candidate.name) {%> Selected <% } %> ><%=data1.category[i].name%></option>
            <% } %>
          </select>
          </div><br>
          <div>
            <input
            type="text"
            id="sub_id"
            name="id"
            value="<%= data[0].id %>"
            hidden
          />
          <input
            type="text"
            class="form-control",
            name = "subcategory"
            id="formGroupExampleInput"
            placeholder="Sub-category Name"
            value="<%=data[0].name %>"
          />
          </div>
        </div>
        <input type="button" class="btn btn-primary" value="Submit" onclick="validate()" />
      </form></br>
      <div>
        <a class="back-button" href="/admin" >Back to HomePage</a>
      </div>
    </div>
  </body>
  <script
    src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
    integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
    crossorigin="anonymous"
  ></script>
  <script>
    async function validate() {
      let id = document.getElementById('sub_id').value;
      let c_name = document.getElementById('category').value;
      let name = document.getElementById('formGroupExampleInput').value;
      if(c_name == "Select One Category") {
        swal({
          text: 'add Category!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(!name) {
        swal({
          text: 'add Sub-category!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      let qry_str = await fetch(`/sub-category/update/${id}`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ c_name,name }),
      }).then(window.location.href = '/sub-category/sub-list/1');

    }
  </script>
</html>
