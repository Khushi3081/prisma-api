<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update-Category</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <style>
    .container {
      width: 1440px;
      margin: auto;
    }
    .button {
      border-radius: 0.25rem;
      border: 1px solid;
      padding: 0.5rem 1rem;
      color: #fff;
      background-color: blueviolet;
      text-decoration: none;
    }
  </style>
  <body>
    <div class="container">
      <form action="">
        <div class="mb-3">
          <label for="formGroupExampleInput" class="form-label"
            >Edit User</label
          >
          <input type="text" id="r_id" name="r_id" value="<%= data[0].id %>" hidden />

          <input
            type="text"
            name="user"
            class="form-control"
            id="uname"
            placeholder="User Name"
            value="<%=data[0].name %>"
          />
        </br>
          <input
            type="text"
            name="email"
            class="form-control"
            id="email"
            placeholder="User Email"
            value="<%=data[0].email %>"
          />
            </br>
          <select class="form-select" aria-label="Default select example" name="r_name" id="role">
            <% for(let i=0;i<role.length;i++) {%>
            <option value="<%=role[i].id%>" <% if(role[i].name == data[0].candidate.name) {%> Selected <% } %> ><%=role[i].name %></option>
          <% } %>
        </select>
        </div>
   
        <div>
          <input
            type="button"
            class="btn btn-primary"
            value="Submit"
            onclick="validate()"
          />
        </div>
      </form> </br>
      <div>
        <a class="button" href="/admin" >Back to HomePage</a>
      </div>
    </div>
  </body>

  <script>
    async function validate() {
      let id = document.getElementById('r_id').value;
      let name = document.getElementById('uname').value;
      let email = document.getElementById('email').value;
      let role_name = document.getElementById('role').value;
      let qry_str = await fetch(`/user/update/${id}`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ id,name,email,role_name }),
      }).then((window.location.href = '/user/user-list/1'));
  

    }
  </script>
</html>
