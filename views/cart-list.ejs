<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0" />
    <title>Category-List</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <style>
    .container{
      width: 1440px;
      margin: auto;
    }
    td{
      padding-right: 2rem;
    }
    .button {
      display: inline-block;
      width: 30px;
      height: 30px;
      background-color: crimson;
      text-decoration: none;
      text-align: center;
      color: white;
      font-weight: bold;
    }
    .back-button {
      border-radius: 0.25rem;
      border: 1px solid;
      padding: 0.5rem 1rem;
      color: #fff;
      background-color: blueviolet;
      text-decoration: none;
    }
    </style>
</head>
    <body>
      <div class="container">
      <div class="card">
        <div class="card-header">Cart-data</div>    
          <div class="row">
            <% if(data == null ||  data.cart_product == "") {%>
              <p>Data not Found</p>
            <% } else { %>
             
            <%for(let i=0;i<data.cart_product.length;i++) {%>

              <% let total = data.cart_product[i].product.price*data.cart_product[i].p_quantuty%>
          <div class="col-sm-3" style="margin-bottom: 2 rem;">
            <div class="card" style="width: 17.9rem;border: 1px solid black;">
              <img style="width: 17rem; height:16rem" class="card-img-top" src="/<%-data.cart_product[i].product.image_path.slice(7)%>" alt="Card image cap"></img>
              <div class="card-body">
              <h5 id= "name" class="card-title"><%-data.cart_product[i].product.name%></h5>
              <div style="flex-direction: row; display: flex; justify-content: space-between;">
                <p class="card-text">Qnt</p>
                <p class="card-text">Rs.</p>
                <p class="card-text">Total</p>
              </div>  
              <div style="flex-direction: row; display: flex; justify-content: space-between;">
                <p class="card-text"><input type="number" min="0" style="width: 40px" class="<%= data.cart_product[i].id %>" value="<%=data.cart_product[i].p_quantuty%>" onchange="changeQnt(this)"/></p>
                <p class="card-text"><%-data.cart_product[i].product.price%></p>
                <p class="card-text"><%-total%></p>
              </div>     
              <input type="button" id="<%= data.cart_product[i].id %>" id="order" onclick="deleteData('<%= data.cart_product[i].id %>')"value="Delete" >
            </div>
          </div>
        </div>
        <%}%>
        <%}%>

      </div>
  </div></br>
  <% if(data== null || data.cart_product == "") {%>
  <% } else { %>
  <div>
    <input type="button" value="Place Order" id="<%= data.cart_product[0].cart_id %>" onclick="addOrder('<%= data.cart_product[0].cart_id %>'),removeCart('<%= data.cart_product[0].cart_id %>')">
  </div></br>
  <%}%>

      <div>
        <a class="back-button" href="/admin" >Back to HomePage</a>
      </div>
    </div>
  </div>
  </body>
  </html>
  </body>
  <script>
    async function changeQnt(quantity) {
      let number = quantity.value;
      let id = quantity.classList.value;
      let qry_str = await fetch(`/cart/addQnt/${id}`,{
          method:"PATCH",
          headers:{
            'Content-type':'application/json',
          },
          body:JSON.stringify({number})
          
        });
    }
    async function deleteData(id) {
      if(confirm("Are you sure you want to delete the data?") == true ){
        let qry_str = await fetch(`/cart/delete/${id}`,{
          method:"PATCH",
          headers:{
            'Content-type':'application/json',
          }
        });
        window.location.reload()
        return true;
      }
      else{
        return false;
      }
    }

    async function removeCart(cart_id) {
      
      let qry_str = await fetch(`/cart/remove-cart`,{
        method:"PATCH",
        headers:{
          'Content-type':'application/json',
        },
        body:JSON.stringify({cart_id})
      });
    }
    async function addOrder(cart_id) {

      let qry_str = await fetch(`/order/add-order`,{
        method:"POST",
        headers:{
          'Content-type':'application/json',
        },
        body:JSON.stringify({cart_id})
      });
      if(qry_str) {
        window.location.href = '/order/order-list'
      }
      }
  </script>
  </html>
  
