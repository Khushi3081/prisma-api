<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sub-category</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'></link>  
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>
  </head>
  <style>
    .container {
      width: 1440px;
      margin: auto;
    }
  </style>
  <body>
    <div class="container">
      <form action='/product' method="POST" enctype="multipart/form-data" id="productInfo">
        <div class="mb-3">
          <label for="formGroupExampleInput" class="form-label"
            >Add Product</label
          >
          <div>
          <select class="form-select" aria-label="Default select example" name="c_id" id="category" onchange="addSubCategory()">
            <option selected>Select One Category</option>
            <% for(let i=0;i<category.length;i++) {%>
              <option value="<%=category[i].id%>"><%=category[i].name%></option>
            <% } %>
          </select>
          </div><br>

          <div>
            <select class="form-select" aria-label="Default select example" name="sub_id" id="subcategory" >             
            </select>
            </div><br>
          <div>
          <input
            type="text"
            class="form-control",
            name = "productname"
            id="productname"
            placeholder="Product Name"
          /><br>
          <input
            type="text"
            class="form-control",
            name = "productprice"
            id="productprice"
            placeholder="Product Price"
            onkeyup="priceCheck()"
          /></br>
          <input
            type="text"
            class="form-control",
            name = "productquntity"
            id="productquntity"
            placeholder="Product Quantity"
          /><br>
          <input
          type="file"
          class="form-control",
          name = "productimage"
          id="productimage"
          placeholder="Product Image"
        />
          </div>
        </div>
        <input type="button" class="btn btn-primary" value="Submit" onclick="return validation()"/>
      </form>
    </div>
  </body>
  <script
    src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
    integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
    crossorigin="anonymous"
  ></script>


  <script>
    async function addSubCategory() {
      const category_id = document.getElementById("category").value;
      const qry_string = await fetch(`/product/sub/${category_id}`);
      const answer = await qry_string.json()
      updateSubCategory(answer)
    }
    async function updateSubCategory(answer){
      const sc_dropdown = document.getElementById("subcategory");
      sc_dropdown.innerHTML = "";

      for(let i=0;i<answer.subcategory.length;i++) {
        const option = document.createElement('option');
        option.value = answer.subcategory[i].id;
        option.text = answer.subcategory[i].name;
        sc_dropdown.appendChild(option);
      }
    }
    async function priceCheck() {
      let price = document.getElementById('productprice').value;
      let check = /^\d{6}/;
      let number = /\D/;
      if(price.match(number)){
        swal({
          text: 'Enter only numeric value!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(price.match(check)) {
        swal({
          text: 'Enter valid price!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
    }
    async function validation() {
      let category = document.getElementById('category').value;
      let subcategory = document.getElementById('subcategory').value;
      let name = document.getElementById('productname').value;
      let Price = document.getElementById('productprice').value;
      let quantity = document.getElementById('productquntity').value;
      let image = document.getElementById('productimage').value;
    //  let i = image.split("\\")[2];
    if(category == "Select One Category") {
        swal({
          text: ' select Category!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(!name) {
        swal({
          text: ' add Product-name!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(!Price) {
        swal({
          text: ' add Product-price!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(!quantity) {
        swal({
          text: ' add Product-quantity!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(!image) {
        swal({
          text: ' add Product-image!',
          confirmButtonColor: '#ff0000',
          type: 'warning',
        })
        return false;
      }
      if(category && name && Price && quantity && image){
        document.getElementById("productInfo").submit();
        return true;
      }
    }
  </script>
</html>
