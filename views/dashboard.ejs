<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'></link>  
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>
    <style>
      .container {
        width: 1470px;
        margin: 0 auto;
      }
      #logo{
        height: 40px;
        width: 40px;
      }
      .cart {
        height: 40px;
        width: 40px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <img id="logo" src="../photos/image-2.jpg" alt="PM" />
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/auth">Registration</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">Log-in</a>
              </li>
                
              </li>
             
            </ul>
            <form class="d-flex" role="search">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
                id="productName"
              />
              <input type="button" id="productName" class="btn btn-outline-success" value="Search" onclick="searchData()" />
            </form>
          </div>
        </div>
      </nav>
    </br>
    <div class="row" id="show"></div>

    <div class="row" id="hide">
      <% data.forEach(e => {%>
      <div class="col-sm-3" style="margin-bottom: 2rem;" >
        <div class="card" style="width: 18rem;border: 1px solid black;">
          <img style="width: 17.9rem; height:16rem" class="card-img-top" src="<%=e.image_path.slice(7)%>" alt="Card image cap" />
          <div class="card-body">
          <div><input type="text" id="<%= e.id %>" value="<%= e.id %>" hidden></div>
          <div style="flex-direction: row; display: flex; justify-content: space-between;">
            <h5 id= "name" class="card-title"><%= e.name %></h5>
            <p class="card-text">Rs.<%= e.price%></p>
          </div>     
                <input type="button" id="<%= e.id %>" onclick="addProduct(this.id)" value="add to cart">
          </div>
        </div>
      </div>
        <%})%>
    </div>
    
  </body>
  <script>
    async function searchData(){
      let data = document.getElementById("productName").value;
      let qry_str = await fetch(`/dashboard/search/?pName=${data}`);
      let result = await qry_str.json();
      if(result[0]){

        let showData = document.getElementById("hide");
        showData.style.display = "none";
        let htmlContent = ""
        htmlContent += `<div class="col-sm-3" >`
         for(let i=0;i<result.length;i++){
          htmlContent +=`<div class="card" style="width: 18rem;border: 1px solid black;">
          <img style="width: 17rem; height:16rem" class="card-img-top" src="${result[i].image_path.slice(7)}" alt="Card image cap" />
          <div class="card-body">
            <div><input type="text" id="${ result[0].id}" value="${result[i].id}" hidden></div>
            <div style="flex-direction: row; display: flex; justify-content: space-between;">
              <h5 id= "name" class="card-title">${result[i].name}</h5>
              <p class="card-text">Rs.${result[i].price}</p>
              </div>     
              </div>
        </div>
        </div>
        }
        `}
        document.getElementById("show").innerHTML = htmlContent;
      }
      else{
        let showData = document.getElementById("hide");
        showData.style.display = "none";
        let htmlContent = `
      <div class="col-sm-3" >
        <h4>Data not found</h4>
        </div>`
        document.getElementById("show").innerHTML = htmlContent;

      }
    }



    async function addProduct(id) {
      swal({
          text: 'Fisrt login!',
          type: 'info',
        }).then((okay) => {
          if (okay) {
            window.location.href = '/login';
          }
        });
    }
  </script>
</html>
